<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_blue"
        android:padding="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        tools:context=".views.MainActivity">

        <ImageView
            android:id="@+id/item_beacon_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ble" />

        <TextView
            android:id="@+id/item_beacon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/os_bold"
            android:text="MAC: 32j9:432rde213:D234d31:D2"
            android:textColor="#323536"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_beacon_ic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_beacon_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/os_light"
            android:text="Beacon1"
            android:textColor="#323536"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_beacon_ic"
            app:layout_constraintTop_toBottomOf="@+id/item_beacon_name" />

        <TextView
            android:id="@+id/item_beacon_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/os_light"
            android:text="Major"
            android:textColor="#323536"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/item_beacon_ic"
            app:layout_constraintTop_toBottomOf="@+id/item_beacon_name" />

        <TextView
            android:id="@+id/item_beacon_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/os_light"
            android:text="Minor"
            android:textColor="#323536"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/item_beacon_ic"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>